<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.boats.market.marven.dell.marven.HomeActivity">

    <include
        layout="@layout/custom_toolbar3"
        android:visibility="gone" />

    <include
        layout="@layout/custom_toolbar"
        android:visibility="gone"

        />


    <include layout="@layout/custom_toolbar2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fragment
            android:id="@+id/placeholder"
            android:name="com.boats.market.marven.dell.marven.EmptyFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/fra" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@id/fra"
            android:background="@drawable/shadow_background" />

        <LinearLayout
            android:id="@+id/fra"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/home_icon" />


            <ImageView
                android:id="@+id/list_icon"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/list_icon" />


            <ImageView
                android:id="@+id/account_icon"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/account_icon" />


            <ImageView
                android:id="@+id/favourites_icon"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/fav_icon" />


            <ImageView
                android:id="@+id/about_icon"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/about_icon"

                />


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>



