<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="112dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/deleteicon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:rotation="45"
            android:src="@drawable/add_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/deleteicon"
            android:layout_marginRight="10dp"
            android:src="@drawable/edit"
            android:visibility="gone" />


        <TextView
            android:id="@+id/remove_fab"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="#312b2762"
            android:gravity="center"
            android:padding="3dp"
            android:text="Remove"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edit_fab"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/remove_fab"
            android:layout_marginRight="10dp"
            android:background="#312b2762"
            android:gravity="center"
            android:padding="3dp"
            android:text="Edit"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            android:textStyle="bold"

            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />


        <ImageView
            android:id="@+id/cart_imge"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"


            />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="105dp"
           android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pronto - 1551"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cart_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/through_line"
                android:text="EGP 200"
                android:visibility="gone"
                android:textColor="@color/mycolor"
                android:textSize="12sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="QTY"
                    android:textColor="@color/mycolor"
                    android:textSize="12sp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="160dp"
                    android:background="@drawable/qty_btn"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/remove_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/negative_icon"
                        android:tint="@color/colorPrimary"

                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@id/remove_icon"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/item_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#000" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_toLeftOf="@id/add_icon"
                        android:background="#000" />

                    <ImageView
                        android:id="@+id/add_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/add_icon"
                        android:tint="@color/colorPrimary"

                        />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="Item Price :"
                    android:textColor="@color/mycolor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/txt1"
                    android:gravity="center"
                    android:text="EGP 500"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/cart_total_price"
                    android:gravity="center"
                    android:text="Total:"
                    android:textColor="@color/mycolor"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/cart_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="EGP 500"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>


